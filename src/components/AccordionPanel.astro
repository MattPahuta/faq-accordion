---
import plusIcon from '../assets/icon-plus.svg';
import minusIcon from '../assets/icon-minus.svg';

const {id, isOpen, headingId, buttonId, titleId, contentId, question, answer} = Astro.props;

    // hidden={!isOpen}

---

<div class="accordion-panel">
  <h3 id={headingId}>
    <button 
      id={buttonId}
      class="accordion-trigger" 
      aria-controls={contentId} 
      aria-expanded={isOpen}
    >
      <span id={titleId}>{question}</span>
      <img class="icon plus-icon" src={plusIcon.src} alt="">
      <img class="icon minus-icon" src={minusIcon.src} alt="">
    </button>
  </h3>
  <div 
    id={contentId} 
    class="accordion-content"
    aria-labelledby={headingId}
    role="region"
    aria-hidden={!isOpen}

    data-state={isOpen ? "open" : "closed"}
  > 
    <p>{answer}</p>
  </div>
</div>

