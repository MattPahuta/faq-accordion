<style>

  .accordion-trigger {
    width: 100%;
    padding-inline: 0;
    padding-block: var(--spacing-300);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-300);
    background-color: var(--clr-white);
    color: inherit;
    border: none;
    cursor: pointer;
    font-size: var(--text-preset-1);
    font-weight: 600;
    text-align: left;
    transition: color 200ms ease-in-out;
  }

  .accordion-trigger:hover,
  .accordion-trigger:focus-visible {
    color: var(--clr-violet-600);
  }

  .accordion-trigger[aria-expanded="true"] .plus-icon {
    display: none;
  }
  .accordion-trigger[aria-expanded="true"] .minus-icon {
    display: block;
  }

  .accordion-trigger[aria-expanded="false"] .minus-icon {
    display: none;
  }
  .accordion-trigger[aria-expanded="false"] .plus-icon {
    display: block;
  }

  .accordion-panel:not(:last-child) {
    border-bottom: 1px solid var(--clr-purple-100);
  }

  .accordion-content {
    font-size: var(--text-preset-2);
    color: var(--clr-purple-600);
    max-height: 0px;
    overflow: clip;
  }
  
  @media (prefers-reduced-motion: no-preference) {
    .accordion-content {
      transition: max-height 350ms ease-in-out;
    }
  }
  
  .accordion-content p {
    padding-block-end: var(--spacing-300);
  }

  .accordion-content[data-state="open"] {
    max-height: 300px;
  }

</style>