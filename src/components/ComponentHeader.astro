---
const { iconSource, headingTitle } = Astro.props;
---

<header class="component-header">
  <img src={iconSource} alt="" aria-hidden="true">
  <h2>{headingTitle}</h2>
</header>

<style>
.component-header {
	margin-block-end: var(--spacing-300);
	display: flex;
	align-items: center;
	gap: var(--spacing-300);
	
	h2 {
		font-size: var(--heading-preset-1);
	}
}

.component-header img,
.component-header svg {
	width: 30px;
	height: 30px;
}

@media (min-width: 37.5rem) {
	.component-header {
		margin-block-end: var(--spacing-400);
	}
	.component-header img,
	.component-header svg {
		width: 40px;
		height: 40px;
	}
}
</style>