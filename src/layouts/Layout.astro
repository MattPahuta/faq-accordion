---
// Supports weights 100-900
import '@fontsource-variable/work-sans';
import '@fontsource-variable/work-sans/wght-italic.css';
const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
		<main class="wrapper">
			<h1 class="visually-hidden">
				Frontend Mentor Accordion Component
			</h1>
			<slot />
		</main>
	</body>
</html>

<style is:global>
:root {
  /* Font Sizes */
  --heading-preset-1: 2rem;
  --text-preset-1: 1rem;
  --text-preset-2: 0.875rem;
  /* Colors */
  --clr-white: #ffffff;
  --clr-black: #000000;
  --clr-purple-950: #301534;
  --clr-purple-600: #8b6990;
	--clr-purple-100: #F8EEFF;
  --clr-purple-200: #decdeb;
  --clr-violet-600: #ad28eb;
  --box-shadow: 0 32px 56px rgba(80, 0, 118, 0.1);
  /* Spacing */
  --spacing-100: 0.5rem;
  --spacing-200: 1rem;
  --spacing-300: 1.5rem;
  --spacing-400: 2rem;
  --spacing-500: 2.5rem;
  --spacing-600: 3rem;
  /* Border radius */
  --br-soft: 0.5rem;
  @media (min-width: 37.5rem) {
    --heading-preset-1: 3.5rem;
    --text-preset-1: 1.125rem;
    --text-preset-2: 1rem;
    --br-soft: 1rem;
  }
}

body {
	min-height: 100vh;
	font-family: 'Work Sans Variable', sans-serif;
	font-size: var(--text-preset-1);
	display: grid;
	place-content: center;
	background-image: url('../assets/background-pattern-mobile.svg');
	background-repeat: no-repeat;
	background-size: contain;
	background-color: var(--clr-purple-100);
	color: var(--clr-purple-950);
}

h1,
h2 {
	font-size: var(--heading-preset-1);
	line-height: 1.1;
}

.wrapper {
	padding-inline: var(--spacing-300);
}

@media (min-width: 37.5rem) {
	body {
		background-image: url('../assets/background-pattern-desktop.svg');
	}
}

.visually-hidden:not(:focus):not(:active) {
	clip: rect(0 0 0 0);
	clip-path: inset(50%);
	height: 1px;
	overflow: hidden;
	position: absolute;
	white-space: nowrap;
	width: 1px;
}
</style>
